<div class="sticky-top">
<!-- announcement banner only for home page -->
{% if page.url == '/' and config.announcement_bar.show %}
<div style="width:100vw;position:relative;left:50%;right:50%;margin-left:-50vw;margin-right:-50vw;background:#f9c784;color:#4e598c;text-align:center;padding:0.75rem 0;font-size:1.25rem;font-weight:600;letter-spacing:0.02em;z-index:2000;display:flex;align-items:center;justify-content:center;gap:1.5rem;">
  <span class="announcement-gradient-text">{{ config.announcement_bar.text }}</span>
  {% if config.announcement_bar.button.show %}
  <a href="{{ config.announcement_bar.button.url }}" class="banner-arrow-btn" style="display:inline-flex;align-items:center;justify-content:center;background:#4e598c;color:#fff;border-radius:50%;width:2.5rem;height:2.5rem;text-decoration:none;transition:background 0.2s;box-shadow:0 2px 8px rgba(78,89,140,0.08);font-size:1.5rem;">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="display:block;margin:auto;">
      <circle cx="12" cy="12" r="12" fill="none"/>
      <path d="M8 12h8M14 8l4 4-4 4" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="visually-hidden">{{ config.announcement_bar.button.text }}</span>
  </a>
  {% endif %}
</div>
{% endif %}
